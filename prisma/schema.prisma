generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  uuid             String        @id @default(uuid())
  account_name     String
  isDeleted        Boolean        @default(false) 
  provider         String
  
  messages         Message[]     @relation("SenderAccount") // Messages sent by this account
  receivedMessages Message[]     @relation("RecipientAccount") // Messages received by this account
  channels         Channel[]
  accountUsers     AccountUser[]
}

model User {
  uuid         String       @id @default(uuid())
  email        String       @unique
  isDeleted        Boolean        @default(false)
  image_url    String?
  accountUsers AccountUser[]
}

model Role {
  uuid         String       @id @default(uuid())
  isDefault    Boolean
  name         String       @default("owner")
  accountUsers AccountUser[]
}

model Channel {
  uuid        String    @id @default(uuid())
  account_id  String
  name        String
  isDeleted        Boolean        @default(false)
  account     Account   @relation(fields: [account_id], references: [uuid])
  messages    Message[]
}

model Message {
  uuid        String    @id @default(uuid())
  channel_id  String
  from_address String    // Sender's account ID
  to_address  String    // Recipient's account ID
  body        String
  isDeleted   Boolean        @default(false)

  channel     Channel   @relation(fields: [channel_id], references: [uuid])
  sender      Account   @relation("SenderAccount", fields: [from_address], references: [uuid])
  recipient   Account   @relation("RecipientAccount", fields: [to_address], references: [uuid])
}

model AccountUser {
  uuid        String   @id @default(uuid())
  account_id  String?
  user_id     String
  role_id     String
  isDeleted   Boolean  @default(false)
  
  account     Account? @relation(fields: [account_id], references: [uuid])
  user        User     @relation(fields: [user_id], references: [uuid])
  role        Role     @relation(fields: [role_id], references: [uuid])
  accountName String?  // Add this field
}
